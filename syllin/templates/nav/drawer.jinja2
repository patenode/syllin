{% from 'base/macros.jinja2' import link, icon %}
{% from 'nav/macros.jinja2' import drawer_item %}

<!-- Drawer -->
<nav id="nav-drawer" class="drawer-contents d-flex flex-column">
    {{ drawer_item(url_for('index'), 'fa-rocket', 'Discovery') }}
    {{ drawer_item(url_for('user.my_library'), 'fa-th-list', 'Library') }}
    {{ drawer_item(url_for('user.my_stats'), 'fa-bar-chart', 'Stats') }}
    <div class="drawer-footer locked d-flex justify-content-between">
        {% call link(url_for('user.my_profile')) %}
            <img src="/static/img/placeholder_img.gif">
        {% endcall %}
        {% call link(url_for('settings')) %}
            {{ icon("fa-cog fa-2x") }}
        {% endcall %}
    </div>
</nav>