{% from 'base/macros.jinja2' import badge, icon %}

{% macro sorting_tags(keynames) %}
    <div class="p-1 w-100">
        Sort by:<br>
        <div class="p-1 d-flex">
            {% for tag in keynames %}
                {% if tag[1] %}
                    {% set badge_style = 'active' %}
                {% else %}
                    {% set badge_style = 'inactive' %}
                {% endif %}
                {{ badge(tag[0], badge_style) }}
            {% endfor %}
        </div>
    </div>
{% endmacro %}

{% macro song_list(songs) %}
    <div class="pt-3">
        <div class="row w-100 mx-0" style="border-bottom: 1px solid;">
            <div class="col-2"></div>
            <div class="col-6 pl-0">Songs</div>
            <div class="col-2">Time</div>
            <div class="col-2">Share</div>
        </div>
        {% if songs|length == 0 %}
            You don't have any songs! Why are you even on this site?
        {% else %}
            {% for song in songs %}
                <div class="row pt-2 pb-1 w-100 mx-0"">
                <div class="col-2">
                    <div class="d-flex justify-content-center align-content-center">{{ icon("fa-play-circle fa-2x") }}</div>
                </div>
                <div class="col-6 px-0 d-flex flex-column">
                    <div class="h6 mt-auto mb-0 text-truncate">{{ song.title }}</div>
                    <div class="small mb-auto text-truncate">
                      {% if song.album %}
                      {{ song.album.title }} | {{ song.album.artist.email }}
                      {% endif %}
                    </div>
                </div>
                <div class="col-2">
                    <span class="align-middle">1:23</span>
                </div>
                <div id="ellipsis" class="col-2 d-flex align-content-center justify-content-center">
                    {{ icon("fa-ellipsis-h fa-2x") }}
                </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endmacro %}
